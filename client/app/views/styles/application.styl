// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

// your styles here
add-head-background = #49b1ec
add-head-color      = #fff
input-background    = #fff
input-help-color    = #000
weather-color       = #fff
city-height         = 11em

#add-head
    background: add-head-background
    color: add-head-color

    text-align: center

    h1
        margin-top: 0
        margin-bottom: .5em 
        padding-top: 1.5em

        letter-spacing: .02em

    h5
        margin-bottom: 2em 
        font-size: smaller

    .input-group
        input
            border: 0
            box-shadow: 0 0 0, 0 0 0
            background: input-background
            float: none
        .input-group-addon
            border: 0
            background: input-background
            cursor: pointer

    .help-block
        color: input-help-color
        font-size: xx-small

#add-choices
    padding-top: 1em
    text-align: center
    .add-choices-choice
        margin: .5em
        padding: 1em .2em
        border-radius: 4px
        color: weather-color
        cursor: pointer
        &:hover
            opacity: .8
    .name
        padding-bottom: 1em
    .weather
        display: inline-block
        width: 40%
        font-size: 3em
    .infos
        padding-bottom: 1em
        display: inline-block
        width: 40%
        .temp
            font-size: 1.5em
        .humidity
            font-size: .75em

#cities
    list-style: none
    .city
        padding: 0
        height: city-height
        margin: 1em
        color: weather-color

    .now
        border-radius: 4px 0 0 4px
        height: 100%
        margin: 0
        padding: 1em 2em 0 2em

        &:hover
            .now-delete
                display: inline-block
        .now-name
            font-size: 1.5em
            padding-bottom: .5em
            display: inline-block
            width: 90%
        .now-delete
            display: none
            cursor: pointer
            top: -.5em
            right: -.5em
        .now-weather
            display: inline-block
            width: 40%
            font-size: 4em
        .now-infos
            padding-bottom: 1em
            display: inline-block
            width: 60%
            .now-temp
                font-size: 3.5em
                display: inline-block
            .now-humidity
                font-size: .75em
                display: inline-block
    .today
        height: 100%
        margin-left: 1px
        padding: 0
        border-radius: 0 4px 0 0
        .time
            padding: .3em 0
            margin: 0
            height: 20%
            &:hover
                opacity: .8
            div, strong
                vertical-align: middle
                height: 100%
                text-align: center
        .index-0
            border-radius: 0 4px 0 0
        .index-4
            border-radius: 0 0 4px 0

    .week
        margin-right: -1px

        .days
            height: city-height
            margin: 0
            .day
                height: 100%
                margin: 0 0 0 1px
                padding: .5em 0 0 0
                text-align: center
                &:hover
                    opacity: .8
                .day-weather
                    padding: .1em 0 .5em 0
                    font-size: 3em
                .day-temp
                    display: inline-block
                    width: 50%
            .index-0
                border-radius: 4px 0 0 4px
            .index-4
                border-radius: 0 4px 4px 0


